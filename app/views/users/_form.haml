= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this bulletin from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  %div
    = f.label :login
    = f.text_field :login
  %div
    = f.label :password
    = f.text_field :password
  %div
    = f.label :password_confirmation
    = f.text_field :password_confirmation
  %div
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'